<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 标题栏 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="水平仪"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:paddingTop="16dp"
            android:paddingBottom="16dp" />

        <!-- 可视化水平仪指示器 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <com.example.levelcheck.ui.widget.LevelIndicatorView
                    android:id="@+id/levelIndicator"
                    android:layout_width="280dp"
                    android:layout_height="280dp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="将设备放平，气泡会居中"
                    android:textSize="12sp"
                    android:textColor="#999999" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 数据显示区域 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <!-- 方位方向 -->
                <TextView
                    android:id="@+id/tvDirection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未知"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:paddingBottom="8dp" />

                <!-- 方位角数值 -->
                <TextView
                    android:id="@+id/tvAzimuth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0°"
                    android:textSize="20sp"
                    android:textColor="#666666"
                    android:paddingBottom="24dp" />

                <!-- 倾斜角 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="倾斜角"
                    android:textSize="16sp"
                    android:textColor="#999999"
                    android:paddingBottom="4dp" />

                <TextView
                    android:id="@+id/tvTilt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0°"
                    android:textSize="42sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 状态指示区域 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- 服务状态 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="服务状态："
                        android:textSize="14sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/tvServiceStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已停止"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#999999" />
                </LinearLayout>

                <!-- 网络状态 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="网络状态："
                        android:textSize="14sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/tvNetworkStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未知"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#999999" />
                </LinearLayout>

                <!-- 上次上传时间 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="上次上传："
                        android:textSize="14sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/tvLastUpload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textSize="14sp"
                        android:textColor="#999999" />
                </LinearLayout>
                
                <!-- 磁力计状态 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="磁场状态："
                        android:textSize="14sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/tvMagnetometerStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="未知"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#999999" />
                </LinearLayout>
                
                <!-- 磁场强度 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="磁场强度："
                        android:textSize="14sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/tvMagneticFieldStrength"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0 μT"
                        android:textSize="14sp"
                        android:textColor="#999999" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        
        <!-- 磁力计警告提示 -->
        <TextView
            android:id="@+id/tvMagnetometerWarning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="#FFF3E0"
            android:text="⚠️ 磁场干扰严重，请远离电子设备或进行8字校准"
            android:textSize="13sp"
            android:textColor="#FF6F00"
            android:visibility="gone" />

        <!-- 操作按钮区域 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnCalibration"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="校准"
                android:textSize="16sp"
                android:backgroundTint="#FF9800" />

            <Button
                android:id="@+id/btnSettings"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="设置"
                android:textSize="16sp"
                android:backgroundTint="#2196F3" />
        </LinearLayout>

        <!-- 服务控制按钮 -->
        <Button
            android:id="@+id/btnToggleService"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="启动服务"
            android:textSize="18sp"
            android:textStyle="bold"
            android:backgroundTint="#4CAF50" />

    </LinearLayout>
</ScrollView>
